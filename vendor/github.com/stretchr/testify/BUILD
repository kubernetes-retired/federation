load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = ["doc.go"],
    importpath = "github.com/stretchr/testify",
    visibility = ["//visibility:public"],
    deps = [
        "//vendor/github.com/stretchr/testify/assert:go_default_library",
        "//vendor/github.com/stretchr/testify/http:go_default_library",
        "//vendor/github.com/stretchr/testify/mock:go_default_library",
    ],
)

go_test(
    name = "go_default_test",
    srcs = ["package_test.go"],
    importpath = "github.com/stretchr/testify",
    library = ":go_default_library",
    deps = ["//vendor/github.com/stretchr/testify/assert:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//vendor/github.com/stretchr/testify/assert:all-srcs",
        "//vendor/github.com/stretchr/testify/mock:all-srcs",
        "//vendor/github.com/stretchr/testify/require:all-srcs",
    ],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
